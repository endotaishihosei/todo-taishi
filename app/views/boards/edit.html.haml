.container
  %ul
    - @board.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @board, url: board_path(@board), method: 'put', local: true) do |f|
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :name, '名前'
    %div
      = f.text_field :name, class: 'name'
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    = f.submit '変更確定', class: 'btn-primary'
