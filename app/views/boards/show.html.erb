<div class="board">
  <h1 class="board_title">＜<%= @board.title %>＞</h1>
  <div class="board_name">
    <p>名前： <%= @board.name %></p>
  </div>
  <div class="board_content">
    <p>内容： <%= @board.content %></p>
  </div>

  <div class="board_detail_actions">
    <div class="dropdown">
      <div class="dropdown-content">
        <%= link_to  edit_board_path(@board), class: 'btn btn-success' do %>
          <i class="fa fa-edit"></i>
          <span>編集</span>
        <% end %>
      </div>
      <div class="dropdown-content">
        <%= link_to  board_path(@board), data: {method: 'delete', confirm: '本当に削除するの？'}, class: 'btn btn-success' do %>
          <i class="fa fa-trash"></i>
          <span>削除</span>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to root_path do %>
    <div class="float_btn">
      <i class="fa fa-arrow-left"></i>
    </div>
  <% end %>
  
</div>
